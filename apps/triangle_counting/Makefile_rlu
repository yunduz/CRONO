clean:
	rm -f $(TRGS) *.o *.dot

%: %.cc ;
	$(CXX) $(CXXFLAGS) $< -o $@ -I$(HOME)/repos/scalable-sync/rlu_relaxed_extension/lib -L$(HOME)/repos/scalable-sync/rlu_relaxed_extension/lib $(LIBS)
